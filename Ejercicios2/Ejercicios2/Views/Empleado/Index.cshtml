@model IEnumerable<CapaNegocio.Empleado>

@{
    ViewBag.Title = "Index";
}

<br /><br />

<p>
    @Html.ActionLink("Nuevo Usuario", "Create")
    &nbsp;&nbsp;&nbsp;
    @Html.ActionLink("Buscar Usuario", "Shearch")
</p>
   
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th
>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ciudad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    using (Html.BeginForm("Delete", "Empleado", new { id = item.EmpleadoId }))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ciudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EmpleadoId }) | 
                <!--Html.ActionLink("Delete", "Delete", new { id=item.EmpleadoId }-->
                <input type="submit" value="Eliminar" onclick="return confirm('Estas seguro de eliminar al  empleado cuyo nombre es @item.Nombre ')" />
            </td>
        </tr>
    }
}

</table>
